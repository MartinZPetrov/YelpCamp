<%include partials/header%>

<div class="row justify-content-center">
  <div class="col-md-6">
    <form action="/register" method="POST">
      <h1 class="text-center">Sign up Form</h1>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="username"
          name="username"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="password"
          placeholder="password"
          name="password"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="first name"
          name="firstname"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="lat name"
          name="lastname"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="email"
          placeholder="john@doe.com"
          name="email"
        />
      </div>
      <div class="form-group">
          <input
            class="form-control"
            type="text"
            placeholder="avatar url"
            name="avatar"
          />
        </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="Admin code"
          name="adminCode"
        />
      </div>
      <button class="btn btn-primary btn-lg btn-block">
        Submit
      </button>
    </form>
  </div>
</div>

<%include partials/footer%>
