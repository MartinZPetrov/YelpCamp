<%include ../partials/header%>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Camp grounds of all films</h1>
      <p>This is a simple site of a camp ground sites</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new"
          >Add a new campgrounds</a
        >
        <form action="/campgrounds" method="GET">
            <div class="form-group d-inline-flex">
              <input type="search" name="search"  class="form-control" placeholder="Search..."/>
              <input type="submit" value="search" class="btn btn-primary" />
            </div>
        </form>
      </p>
    </div>
  </header>
  <div class="row">
    <%campgrounds.forEach((each) => { %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img style="width:100%;" src="<%= each.image%>" />
        <div class="caption">
          <h4><%= each.name %></h4>
          <p><%= each.description %></p>
          <a
            class="btn btn-primary btn-large"
            href="/campgrounds/<%= each._id %>"
            >Info</a
          >
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<%include ../partials/footer%>
