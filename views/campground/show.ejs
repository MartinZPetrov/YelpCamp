<%include ../partials/header%>

<div class="container">
  <div class="row">
    <div class="col-3">
      <h1><%= item.name %></h1>
      <ul class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </ul>
    </div>
    <div class="col-9">
      <div class="card">
        <img src="<%=item.image%>" />
        <div class="card-body">
          <div class="pull-right">
            <h4>$<%=item.price%></h4>
            <h4><a><%=item.name%></a></h4>
            <div style="padding-bottom: 10px;">
                <form action="/campgrounds/<%=item._id %>/like" method="POST">
                    <div class="btn-group">
                        <% if (currentUser && item.likes.some(function (like) {
                            return like.equals(currentUser._id)
                        })) { %>
                            <button class="btn btn-sm btn-primary">
                                <i class="fas fa-thumbs-up"></i> Liked (<%= item.likes.length %>)
                            </button>
                        <% } else { %>
                            <button class="btn btn-sm btn-secondary">
                                <i class="fas fa-thumbs-up"></i> Like (<%= item.likes.length %>)
                            </button>
                        <% } %>
                        <button type="button" class="btn btn-sm btn-default" data-toggle="modal"
                                data-target="#campgroundLikes">See more details
                        </button>
                    </div>
                </form>
            </div>
            <p><%= item.description%></p>
            <p>
              <em>Submitted by: <a href="/users/<%=item.author.id %>"><%= item.author.name %></a>
                <%=moment(item.createdAt).fromNow() %></em >
            </p>

            <%if(currentUser && currentUser._id.equals(item.author.id) || currentUser &&
            currentUser.isAdmin ) {%>
            <a class="btn btn-warning btn-large mb-3"  href="/campgrounds/<%=item._id%>/edit" >
              Edit Campground
            </a>
            <form id="delete-form" action="/campgrounds/<%=item._id%>?_method=DELETE"  method="POST" >
              <button class="btn btn-danger">Delete Campground</button>
            </form>
            <%}%>
          </div>

          <a
            class="btn btn-primary btn-large mb-3"
            href="/campgrounds/<%=item._id%>/comments/new"
          >
            Create a new comment
          </a>
          <div class="row">
            <%item.comments.forEach((str) =>{%>
            <div class="col-12">
              <p><strong> <%=str.author.name%> : </strong> <%=str.text%></p>
              <%if(currentUser && currentUser._id.equals(str.author.id)) {%>
              <a
                class="btn btn-xs btn-warning"
                href="/campgrounds/<%=item._id%>/comments/<%=str.id%>/edit"
              >
                Edit Comment
              </a>
              <form
                id="delete-form"
                action="/campgrounds/<%=item._id%>/comments/<%=str.id%>?_method=DELETE"
                method="POST"
              >
                <button class="btn btn-danger">Delete Comment</button>
              </form>
              <%}%>
            </div>
            <%})%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Campground Likes Modal -->
<div id="campgroundLikes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Campground likes: <%= item.likes.length %></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Liked by:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% item.likes.forEach(function(like) { %>
                        <tr>
                            <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                        </tr>
                    <% }); %>
                    <% if (item.likes.length === 0) { %>
                        <tr>
                            <td><em>No likes yet.</em></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%include ../partials/footer%>
