<%include ../partials/header%>
<div class="container w-50 p-5">
  <h1 class="text-center">This is a new Campground</h1>

  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="name"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="number"
          name="price"
          placeholder="price"
          min="0.01"
          step="0.01"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="image"
          placeholder="image"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="description"
          placeholder="description"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </div>
    <a href="/campgrounds">Back</a>
  </form>
</div>
<%include ../partials/footer%>
