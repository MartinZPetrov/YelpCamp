<%include ../partials/header%>
<div class="container w-50 p-5">
  <h1 class="text-center">EDIT <%=item.name%></h1>

  <form action="/campgrounds/<%=item._id%>?_method=PUT" method="POST">
    <div class="form-group">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="campground[name]"
          value="<%=item.name%>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="number"
          name="campground[price]"
          value="<%=item.price%>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="campground[image]"
          value="<%=item.image%>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="campground[description]"
          value="<%=item.description%>"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>
    </div>
    <a href="/campgrounds">Back</a>
  </form>
</div>
<%include ../partials/footer%>
